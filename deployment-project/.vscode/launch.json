	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Run Tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/index.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Deploy Contract",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/deploy.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Content",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/content.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Accounts",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/accounts.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		}
	]
}